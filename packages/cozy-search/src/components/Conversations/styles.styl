@require 'settings/breakpoints.styl'

.conversationBar
    max-height 95px
    min-height 48px
    z-index 1

    +gt-mobile()
      max-height 178px

.conversationBar-input
  max-height 80px

  +gt-mobile()
    max-height 155px

.chatConversation
  overflow-y scroll

  &::-webkit-scrollbar
    display: none

.conversationHeaderBar
  box-shadow inset 0 -1px 0 0 var(--dividerColor)
  background-color var(--paperBackgroundColor)

.conversationList
  box-shadow inset -1px 0 0 0 var(--dividerColor)

  &--container
    overflow-y scroll

    &::-webkit-scrollbar
      display none

  &--hidden
    display: none

.conversationListItem
  &--selected
    background-color var(--defaultBackgroundColor) !important

.menu-container
  background-color var(--paperBackgroundColor)

.menuToggler
  position absolute
  box-sizing border-box

  &--disabled
    border-bottom: 1px solid var(--dividerColor)
    border-right: 1px solid var(--dividerColor)
    border-bottom-right-radius: 1rem
    background: var(--paperBackgroundColor)

.conversation-container
  background-color var(--paperBackgroundColor)

.conversation-chips-container
    gap 0.5rem

.conversation-chips-icon
  height 1rem
  margin-left 0.5rem !important

.conversation-chips-item
  border-style solid !important
  margin-right 0 !important

.conversation-chips-counter
  border-radius 100%
  background-color var(--primaryColor)
  height 16px !important
  width 16px !important
  color white !important
  margin-right 0.5rem !important
  font-size 0.7rem !important
  display flex
  align-items center
  justify-content center

.trigger-button
  border-radius 20px
  padding 4px 12px
  border 1px solid var(--border-main-color)
  background-color var(--paperBackgroundColor)
  text-transform none
  min-width 0
  height 32px

.assistant-icon
  margin-right 8px

.menu-item
  display flex
  align-items center
  justify-content space-between
  min-width 200px

.menu-item-content
  display flex
  align-items center

.create-icon
  margin-right 8px

.create-assistant-item
  border-top 1px solid var(--dividerColor)

.knowledge-source-container
  display flex
  gap 8px
  margin-top 12px
  justify-content center
  align-items center

.knowledge-source-button
  border-radius 20px
  padding 6px 16px
  text-transform none
  min-width 0
  font-size 14px
  transition all 0.2s ease

  &--selected
    background-color var(--primaryColor)
    color white
    border-color var(--primaryColor)

.search-conversation-container
  background-color var(--paperBackgroundColor)
  padding 2rem 0
  overflow auto

.search-conversation-list
  flex 1
  overflow-y auto
  margin-top 16px

.upload-file-item
  display flex
  align-items center
  gap 1rem

  .upload-file-item-icon
    height 16px
