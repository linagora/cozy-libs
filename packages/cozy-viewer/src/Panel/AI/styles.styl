@keyframes aiLoaderSlide
  0%
    transform translateX(-100%)
  100%
    transform translateX(100%)

.loaderContainer
  position relative
  overflow hidden
  height 3px
  width 100%
  background-color var(--dividerColor)
  margin-top 0px

.loaderBar
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background linear-gradient(90deg, rgba(0, 183, 255, 0.90) 0%, rgba(224, 109, 209, 0.90) 56.73%, rgba(255, 255, 0, 0.90) 100%), #D9D9D9
  animation aiLoaderSlide 2s linear infinite
